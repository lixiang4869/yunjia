.chat-list {
  width: 100%;
  height: 100%;
}
.chat-list .chat {
  width: 100%;
  border-bottom: solid 1rpx #eaeaea;
}
.chat-list .chat .row {
  width: 100%;
  padding-left: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.chat-list .chat .row .right {
  -webkit-flex-shrink: 1;
          flex-shrink: 1;
  width: 100%;
}
.chat-list .chat .row .right .top {
  height: 57rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.chat-list .chat .row .right .top .time {
  font-size: 41rpx;
