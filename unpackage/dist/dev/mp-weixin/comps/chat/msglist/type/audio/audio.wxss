
.audio-player {
	position: relative;
	overflow: hidden;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-transition: opacity .5s;
	transition: opacity .5s;
}
.audio-player .controls {
	height:40rpx;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center;
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
}
.audio-player .controls image {
	height: 48rpx;
	width: 30rpx;
	margin: 0 8rpx 0 100rpx;
}
.audio-player .time {
	font-size: 30rpx;
	line-height: 40rpx;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	text-align: left;
}


