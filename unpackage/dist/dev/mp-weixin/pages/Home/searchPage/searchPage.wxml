<view><view class="place"><view class="input-box"><input placeholder="搜索店铺" focus="{{showPopupBottom}}" data-event-opts="{{[['input',[['getName',['$event']]]]]}}" bindinput="__e"/></view><text data-event-opts="{{[['tap',[['searchgoods',['$event']]]]]}}" bindtap="__e">搜索</text></view><view><block wx:for="{{shops}}" wx:for-item="v" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['merchantStore',['$0',index],[[['shops','',index]]]]]]]}}" class="merchant" bindtap="__e"><view class="shop_top"><view class="shopLeft"><image class="shop_image" src="{{url+v.logo}}" mode></image></view><view class="shop_top2"><text class="shop_name">{{v.name}}</text><text class="shop_sell">{{"已售"+v.sell}}</text></view><view class="shop_distance"><image class="shop_distance_img" src="https://xin.yiyunoto.com/uploads/static/home/dingwei.png" mode></image><text>{{v.getDistance}}</text></view></view><view class="shops"><block wx:for="{{v.product}}" wx:for-item="item" wx:for-index="j" wx:key="j"><view class="shop_goods"><image class="shop_goods_img" src="{{url+item.img}}" data-event-opts="{{[['tap',[['goProductDetails',['$0','$1'],[[['shops','',index],['product','',j,'product_id']],[['shops','',index,'id']]]]]]]}}" catchtap="__e"></image><text class="shop_goods_text">{{"￥"+item.nowprice}}</text></view></block></view></view></block></view></view>