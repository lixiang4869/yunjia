.status {
  width: 100%;
  height: 0;
  position: fixed;
  z-index: 10;
  background-color: #fff;
  top: 0;
  height: 25px;
}
.place {
  width: 92%;
  padding: 0 4%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  position: fixed;
  z-index: 10;
  background-color: #fff;
  border-bottom: 2rpx solid #E6E6E6;
  font-size: 28rpx;
}
.place .input-box {
  width: 75%;
  height: 60rpx;
  background-color: #f5f5f5;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
  margin-right: 40rpx;
}
.place .input-box input {
  padding-top: 10rpx;
  padding-left: 28rpx;
  height: 28rpx;
  font-size: 28rpx;
}
.category-list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.category-list .left,
.category-list .right {
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
}
.category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  color: #3c3c3c;
}
.category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.category-list .left .row.on .text .block {
  width: 10rpx;
  top: 10%;
}
.category-list .right {
  width: 76%;
  left: 24%;
}
.category-list .right .list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.category-list .right .list .box {
  width: calc(71.44vw / 3);
  margin-bottom: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.category-list .right .list .box image {
  width: 60%;
  height: calc(71.44vw / 3 * 0.6);
}
.category-list .right .list .box .text {
  margin-top: 5rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 26rpx;
}

